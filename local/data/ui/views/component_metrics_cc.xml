      <option name="table.wrap">1</option>
      <option name="type">list</option>
      <option name="charting.axisTitleY.text">Users</option>
      <option name="charting.axisTitleX.text">Time</option>
    </chart>
  </row>
  <row>
    <chart>
      <title>Event Machine Thread Queue</title>
      <searchPostProcess>timechart avg(cc.thread_info_event_machine_threadqueue_waiting) as "Threads waiting" avg(cc.thread_info.event_machine.threadqueue.size) as "Queue Size" by job_and_index useother=f limit=200</searchPostProcess>
      
